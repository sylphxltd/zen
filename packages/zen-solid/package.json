{
  "name": "@sylphx/zen-solid",
  "version": "1.0.2",
  "description": "Solid.js integration for Zen state manager",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "bunup --format esm,cjs --dts --target node --minify"
  },
  "dependencies": {
    "@sylphx/zen": "workspace:*"
  },
  "peerDependencies": {
    "solid-js": "^1.0.0"
  },
  "devDependencies": {
    "bunup": "^0.15.13",
    "typescript": "^5.4.5",
    "solid-js": "^1.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphx/zen.git",
    "directory": "packages/zen-solid"
  },
  "keywords": [
    "zen",
    "state manager",
    "solid",
    "solidjs",
    "signals"
  ],
  "author": "SylphLab",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}

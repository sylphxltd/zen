{
	"name": "@rapid/router-core",
	"version": "0.0.0",
	"description": "Pure routing logic built on Rapid Signal reactive primitives (framework-agnostic)",
	"type": "module",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}

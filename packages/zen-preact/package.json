{
  "name": "@sylphx/zen-preact",
  "version": "1.0.1",
  "description": "Preact integration for Zen state manager",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "README.md"],
  "sideEffects": false,
  "scripts": {
    "build": "bunup --format esm,cjs --dts --target node --minify"
  },
  "dependencies": {
    "@sylphx/zen": "^1.2.1"
  },
  "peerDependencies": {
    "preact": "^10.0.0"
  },
  "devDependencies": {
    "bunup": "^0.15.13",
    "typescript": "^5.4.5",
    "preact": "^10.24.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphx/zen.git",
    "directory": "packages/zen-preact"
  },
  "keywords": ["zen", "state manager", "preact", "hooks"],
  "author": "SylphLab",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@sylphx/zen-router",
  "version": "0.1.1",
  "description": "Tiny URL router for zen state management.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --minify --sourcemap && bun build src/index.ts --outdir dist --target node --minify --sourcemap --format cjs --outfile dist/index.cjs && tsc --emitDeclarationOnly --outDir dist"
  },
  "keywords": ["zen", "router", "routing", "state management", "minimal", "tiny"],
  "author": "Sylph Lab <hi@sylphlab.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylphlab/zen.git",
    "directory": "packages/zen-router"
  },
  "homepage": "https://github.com/sylphlab/zen/tree/main/packages/zen-router#readme",
  "bugs": {
    "url": "https://github.com/sylphlab/zen/issues"
  },
  "devDependencies": {
    "vite-tsconfig-paths": "^5.1.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@sylphx/zen": "workspace:*"
  }
}

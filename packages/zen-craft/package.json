{
  "name": "@sylphx/zen-craft",
  "version": "5.0.22",
  "description": "Craft immutable state updates with JSON Patches for Zen",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bunup --format esm,cjs --dts --target node",
    "dev": "bun build src/index.ts --outdir dist --target node --sourcemap --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "bun rimraf dist"
  },
  "dependencies": {
    "@sylphx/craft": "^1.0.0",
    "@sylphx/zen": "workspace:*"
  },
  "devDependencies": {
    "bunup": "^0.15.13",
    "@types/node": "^20.12.12",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "zen",
    "state management",
    "immer",
    "produce",
    "craft",
    "patch",
    "immutable",
    "time-travel"
  ],
  "author": "Sylphx <hi@sylphx.com>",
  "license": "MIT"
}

		"directory": "packages/rapid-signal"
	},
	"homepage": "https://github.com/SylphxAI/rapid/tree/main/packages/rapid-signal#readme",
	"bugs": {
		"url": "https://github.com/SylphxAI/rapid/issues"
	},
	"dependencies": {
		"@rapid/signal-core": "workspace:*"
	},
	"devDependencies": {
		"bunup": "^0.16.10",
		"typescript": "^5.8.3"

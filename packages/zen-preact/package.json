{
  "name": "@sylphx/zen-preact",
  "version": "4.0.0",
  "description": "Preact integration for Zen state manager",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "bunup --format esm,cjs --dts --target node --minify"
  },
  "peerDependencies": {
    "@sylphx/zen": "^3.11.0",
    "preact": "^10.0.0"
  },
  "devDependencies": {
    "@sylphx/zen": "workspace:*",
    "bunup": "^0.15.13",
    "typescript": "^5.4.5",
    "preact": "^10.24.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/zen.git",
    "directory": "packages/zen-preact"
  },
  "keywords": [
    "zen",
    "state manager",
    "preact",
    "hooks"
  ],
  "author": "Sylphx <hi@sylphx.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}

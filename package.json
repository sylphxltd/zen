{
  "name": "zen-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.3.1",
  "description": "Monorepo for the zen state management library and related packages.",
  "type": "module",
  "scripts": {
    "dev": "bunx turbo dev",
    "build": "bunx turbo run build --filter=./packages/*",
    "test": "bunx turbo test",
    "test:watch": "bunx turbo test:watch",
    "bench": "bunx turbo bench",
    "lint": "bun biome lint",
    "lint:fix": "bun biome lint --fix",
    "changeset": "bun changeset",
    "version-packages": "bun changeset version",
    "release": "bunx turbo run build --filter=\\\"./packages/*\\\" && bunx changeset publish",
    "docs": "bun typedoc --entryPointStrategy packages --out docs packages/zen packages/zen-router"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.7",
    "@reduxjs/toolkit": "^2.10.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@sylphlab/biome-config": "^0.2.0",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@vitest/coverage-v8": "^3.2.4",
    "bunup": "^0.15.13",
    "effector": "^23.4.4",
    "esbuild": "^0.25.12",
    "gzip-size-cli": "^5.1.0",
    "jotai": "^2.15.1",
    "jsdom": "^26.1.0",
    "lefthook": "^1.13.6",
    "nanostores": "^1.0.1",
    "react": "^19.2.0",
    "rimraf": "^6.1.0",
    "size-limit": "^11.2.0",
    "terser": "^5.44.1",
    "tsup": "^8.5.0",
    "turbo": "^2.6.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "valtio": "^2.2.0",
    "vitest": "^3.2.4",
    "zustand": "^5.0.8"
  },
  "dependencies": {
    "@sylphx/craft": "^1.2.0"
  }
}

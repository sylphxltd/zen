{
	"name": "@rapid/tui-router",
	"version": "0.0.0",
	"description": "Router components for @rapid/tui - client-side routing for terminal UIs",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"development": "./src/index.ts",
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bunup src/index.ts --format esm --dts --target node --splitting=false --external @rapid/router-core --external @rapid/tui --external @rapid/runtime --external @rapid/signal",
		"build:watch": "bunup src/index.ts --format esm --dts --target node --splitting=false --watch --external @rapid/router-core --external @rapid/tui --external @rapid/runtime --external @rapid/signal",
		"dev": "bun run --watch src/index.ts",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"rapid",
		"tui",
		"router",
		"terminal",
		"cli",
		"routing"
	],
	"author": "Rapid Team",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SylphxAI/rapid.git",
		"directory": "packages/rapid-tui-router"
	},
	"dependencies": {
		"@rapid/router-core": "workspace:*"
	},
	"peerDependencies": {
		"@rapid/tui": "workspace:*",
		"@rapid/runtime": "workspace:*",
		"@rapid/signal": "workspace:*"
	},
	"devDependencies": {
		"bunup": "^0.16.10",
		"typescript": "^5.8.3"
	},
	"publishConfig": {
		"access": "public"
	}
}

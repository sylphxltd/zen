{
	"name": "@rapid/router-preact",
	"version": "0.0.0",
	"description": "Preact hooks for Rapid Router with auto-intercepting navigation",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bunup --format esm --dts --target node --minify",
		"clean": "bun rimraf dist .turbo"
	},
	"keywords": [
		"rapid",
		"router",
		"routing",
		"preact",
		"hooks",
		"navigation"
	],
	"author": "Sylphx <hi@sylphx.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SylphxAI/rapid.git",
		"directory": "packages/rapid-router-preact"
	},
	"homepage": "https://github.com/SylphxAI/rapid/tree/main/packages/rapid-router-preact#readme",
	"bugs": {
		"url": "https://github.com/SylphxAI/rapid/issues"
	},
	"peerDependencies": {
		"@rapid/router-core": "^0.0.0",
		"@rapid/signal-core": "^0.0.0",
		"preact": ">=10.0.0"
	},
	"devDependencies": {
		"@rapid/signal": "workspace:*",
		"@rapid/router-core": "workspace:*",
		"@rapid/signal-core": "workspace:*",
		"bunup": "^0.16.10",
		"preact": "^10.27.2",
		"typescript": "^5.8.3"
	},
	"publishConfig": {
		"access": "public"
	}
}

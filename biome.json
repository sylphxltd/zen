{
  "extends": ["@sylphlab/biome-config"],
  "files": {
    "ignore": [
      "**/*.js",
      "**/dist/**",
      "**/*.test.[jt]s",
      "**/*.spec.[jt]s",
      "**/archive/**",
      "benchmark-*.ts",
      "**/*-backup.ts",
      "**/ultra-*.ts",
      "packages/rapid-signal-extensions/craft/rapid.ts"
    ]
  },
  "linter": {
    "ignore": ["**/core.d.ts"]
  },
  "overrides": [
    {
      "include": [
        "packages/rapid-*/**",
        "packages/rapid-signal/**",
        "packages/rapid-router/**",
        "packages/rapid-router-preact/**",
        "packages/rapid-router-react/**",
        "packages/rapid-signal-extensions/**"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off",
            "noAssignInExpressions": "off",
            "noPrototypeBuiltins": "off",
            "noSelfCompare": "off"
          },
          "complexity": {
            "noExcessiveCognitiveComplexity": "off",
            "noBannedTypes": "off",
            "noForEach": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "useExhaustiveDependencies": "warn"
          },
          "a11y": {
            "useButtonType": "off"
          },
          "style": {
            "useFilenamingConvention": "off",
            "useConsistentArrayType": "off"
          }
        }
      }
    }
  ]
}

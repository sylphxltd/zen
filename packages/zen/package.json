{
  "name": "@sylphx/zen",
  "version": "3.0.0",
  "description": "Zen state management library - extreme minimalism, extreme speed. V3: Auto-tracking reactivity.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bunup src/zen.ts --format esm,cjs --dts --target node --minify && mv dist/zen.js dist/index.js && mv dist/zen.cjs dist/index.cjs && mv dist/zen.d.ts dist/index.d.ts && mv dist/zen.d.cts dist/index.d.cts",
    "size": "bun size-limit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "echo 'Lint script not implemented yet'"
  },
  "size-limit": [
    {
      "name": "zen v3 (full)",
      "path": "dist/index.js",
      "import": "{ zen, computed, effect, subscribe, batch }",
      "limit": "1.5 kB"
    }
  ],
  "keywords": [
    "state",
    "store",
    "state management",
    "atom",
    "reactive",
    "minimal",
    "tiny",
    "nanostores"
  ],
  "author": "Sylphx <hi@sylphx.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SylphxAI/zen.git"
  },
  "homepage": "https://github.com/SylphxAI/zen#readme",
  "bugs": {
    "url": "https://github.com/SylphxAI/zen/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "bunup": "^0.15.13",
    "typescript": "^5.8.3"
  }
}

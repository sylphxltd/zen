{
  "name": "@rapid/signal-react",
  "version": "0.0.0",
  "description": "React integration for Rapid Signals with auto-unwrap and lifecycle management",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js",
      "require": "./dist/vite.cjs"
    },
    "./webpack": {
      "types": "./dist/webpack.d.ts",
      "import": "./dist/webpack.js",
      "require": "./dist/webpack.cjs"
    },
    "./rollup": {
      "types": "./dist/rollup.d.ts",
      "import": "./dist/rollup.js",
      "require": "./dist/rollup.cjs"
    },
    "./esbuild": {
      "types": "./dist/esbuild.d.ts",
      "import": "./dist/esbuild.js",
      "require": "./dist/esbuild.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bunup --entry 'src/index.ts' 'src/vite.ts' 'src/webpack.ts' 'src/rollup.ts' 'src/esbuild.ts' --format esm,cjs --dts --target node --minify",
    "clean": "bun rimraf dist .turbo"
  },
  "keywords": ["rapid", "signal", "reactive", "react", "hooks", "state-management"],
  "author": "Sylphx <hi@sylphx.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SylphxAI/rapid.git",
    "directory": "packages/rapid-signal-react"
  },
  "homepage": "https://github.com/SylphxAI/rapid/tree/main/packages/rapid-signal-react#readme",
  "bugs": {
    "url": "https://github.com/SylphxAI/rapid/issues"
  },
  "dependencies": {
    "@rapid/signal-core": "workspace:*",
    "unplugin-rapid-signal": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.0.1",
    "bunup": "^0.16.10",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}

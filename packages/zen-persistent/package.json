{
  "name": "@sylphx/zen-persistent",
  "version": "1.0.1",
  "description": "Persistent store for Zen state manager (localStorage/sessionStorage sync)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "typecheck": "bun tsc --noEmit",
    "build": "bunup --format esm,cjs --dts --target node --minify",
    "validate": "bun run check-format && bun run lint && bun run typecheck && bun run test"
  },
  "dependencies": {
    "@sylphx/zen": "^1.2.1"
  },
  "peerDependencies": {
    "@sylphx/zen": "^1.2.1"
  },
  "devDependencies": {
    "bunup": "^0.15.13",
    "typescript": "^5.5.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphx/zen.git",
    "directory": "packages/zen-persistent"
  },
  "keywords": ["zen", "state manager", "persistent", "localstorage", "sessionstorage"],
  "author": "SylphLab",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}

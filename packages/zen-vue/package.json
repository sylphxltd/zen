  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "bunup": "^0.15.13",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^26.1.0",
    "typescript": "^5.5.3",
    "vue": "^3.4.34"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphx/zen.git",
    "directory": "packages/zen-vue"
  },
  "keywords": ["zen", "state manager", "vue"],

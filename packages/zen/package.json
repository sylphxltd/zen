{
  "name": "@sylphx/zen",
  "version": "2.0.0",
  "description": "Zen state management library - extreme minimalism, extreme speed.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunup --format esm,cjs --dts --target node --minify",
    "build:optimized": "bunup src/zen-optimized.ts --format esm,cjs --dts --target node --minify --out-dir dist/optimized",
    "size": "bun size-limit",
    "lint": "echo 'Lint script not implemented yet'"
  },
  "size-limit": [
    {
      "name": "zen (atom only)",
      "path": "dist/index.js",
      "import": "{ atom }",
      "limit": "3.0 kB"
    },
    {
      "name": "zen (full)",
      "path": "dist/index.js",
      "import": "{ atom, computed, map, deepMap, task, batch, onMount, subscribe, get }",
      "limit": "3.5 kB"
    }
  ],
  "keywords": [
    "state",
    "store",
    "state management",
    "atom",
    "reactive",
    "minimal",
    "tiny",
    "nanostores"
  ],
  "author": "Sylph Lab <hi@sylphlab.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylphx/zen.git"
  },
  "homepage": "https://github.com/sylphx/zen#readme",
  "bugs": {
    "url": "https://github.com/sylphx/zen/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "bunup": "^0.15.13",
    "typescript": "^5.8.3"
  }
}

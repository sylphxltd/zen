{
  "name": "@sylphx/zen-vue",
  "version": "0.0.0",
  "description": "Vue integration for Zen state manager",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --minify --sourcemap && bun build src/index.ts --outdir dist --target node --minify --sourcemap --format cjs --outfile dist/index.cjs && tsc --emitDeclarationOnly --outDir dist"
  },
  "peerDependencies": {
    "@sylphx/zen": "workspace:*",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^26.1.0",
    "typescript": "^5.5.3",
    "vue": "^3.4.34"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphlab/zen.git",
    "directory": "packages/zen-vue"
  },
  "keywords": ["zen", "state manager", "vue"],
  "author": "SylphLab",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}

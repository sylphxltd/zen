{
  "name": "@zen/router-core",
  "version": "0.0.0",
  "description": "Pure routing logic built on Zen Signal reactive primitives (framework-agnostic)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bunup --format esm,cjs --dts --target node --minify",
    "dev": "bunup --format esm,cjs --dts --target node --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": ["zen", "router", "routing", "signal", "reactive", "minimal", "tiny"],
  "author": "Sylphx <hi@sylphx.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SylphxAI/zen.git",
    "directory": "packages/zen-router-core"
  },
  "homepage": "https://github.com/SylphxAI/zen/tree/main/packages/zen-router-core#readme",
  "bugs": {
    "url": "https://github.com/SylphxAI/zen/issues"
  },
  "dependencies": {
    "@zen/signal-core": "workspace:*",
    "@zen/signal-extensions": "workspace:*"
  },
  "devDependencies": {
    "bunup": "^0.15.13",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "publishConfig": {
    "access": "public"
  }
}

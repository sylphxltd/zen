{
  "name": "@zen/runtime",
  "version": "0.0.0",
  "description": "Platform-agnostic runtime for Zen framework - components and utilities that work everywhere",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bunup --format esm,cjs --target node --minify",
    "dev": "bunup --format esm,cjs --target node --watch",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["zen", "runtime", "reactive", "components", "platform-agnostic", "cross-platform"],
  "author": "Zen Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SylphxAI/zen.git",
    "directory": "packages/zen-runtime"
  },
  "dependencies": {
    "@zen/signal": "workspace:*",
    "@zen/signal-extensions": "workspace:*"
  },
  "devDependencies": {
    "bunup": "^0.15.13",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@sylphx/zen-solid",
  "version": "3.0.10",
  "description": "Solid.js integration for Zen state manager",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "README.md"],
  "sideEffects": false,
  "scripts": {
    "build": "bunup --format esm,cjs --dts --target node --minify"
  },
  "peerDependencies": {
    "@sylphx/zen": "^3.0.0",
    "solid-js": "^1.0.0"
  },
  "devDependencies": {
    "@sylphx/zen": "workspace:*",
    "bunup": "^0.15.13",
    "typescript": "^5.4.5",
    "solid-js": "^1.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/zen.git",
    "directory": "packages/zen-solid"
  },
  "keywords": ["zen", "state manager", "solid", "solidjs", "signals"],
  "author": "Sylphx <hi@sylphx.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}

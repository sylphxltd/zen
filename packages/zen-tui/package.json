{
  "name": "@zen/tui",
  "version": "0.0.0",
  "description": "Terminal UI renderer for Zen framework - build beautiful CLI apps",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bunup src/index.ts src/jsx-runtime.ts --format esm --dts --target node --splitting=false --external @zen/runtime --external @zen/signal --external @zen/tui/jsx-runtime --external chalk --external cli-boxes --external string-width --external strip-ansi",
    "dev": "bun run --watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["zen", "tui", "terminal", "cli", "ink"],
  "author": "Zen Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SylphxAI/zen.git",
    "directory": "packages/zen-tui"
  },
  "dependencies": {
    "@zen/runtime": "workspace:*",
    "@zen/signal": "workspace:*",
    "chalk": "^5.3.0",
    "cli-boxes": "^3.0.0",
    "string-width": "^7.2.0",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "bunup": "^0.15.13",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}

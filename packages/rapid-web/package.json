{
  "name": "@rapid/web",
  "version": "0.0.0",
  "description": "Web renderer for Rapid framework - DOM operations, JSX runtime, SSR",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./jsx-runtime": {
      "react-server": {
        "development": "./src/jsx-runtime-server.ts",
        "types": "./dist/jsx-runtime-server.d.ts",
        "import": "./dist/jsx-runtime-server.js"
      },
      "development": "./src/jsx-runtime.ts",
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "react-server": {
        "development": "./src/jsx-runtime-server.ts",
        "types": "./dist/jsx-runtime-server.d.ts",
        "import": "./dist/jsx-runtime-server.js"
      },
      "development": "./src/jsx-runtime.ts",
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./hydrate": {
      "types": "./dist/hydrate.d.ts",
      "import": "./dist/hydrate.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bunup --entry 'src/{index,jsx-runtime,jsx-runtime-server,server,hydrate}.ts' --format esm --dts --target node --splitting=false",
    "dev": "bun run --watch src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["rapid", "web", "dom", "jsx", "ssr", "hydration"],
  "author": "Rapid Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SylphxAI/rapid.git",
    "directory": "packages/rapid-web"
  },
  "dependencies": {
    "@rapid/runtime": "workspace:*",
    "@rapid/signal": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "bunup": "^0.16.10",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@sylphx/zen-router-preact",
  "version": "0.0.3",
  "description": "Preact integration for @sylphx/zen-router",
  "author": "Sylph Lab <hi@sylphlab.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphlab/zen.git",
    "directory": "packages/zen-router-preact"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "README.md"],
  "keywords": ["zen", "router", "preact", "hooks", "state management"],
  "homepage": "https://github.com/sylphlab/zen/tree/main/packages/zen-router-preact#readme",
  "bugs": {
    "url": "https://github.com/sylphlab/zen/issues"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --minify --sourcemap && bun build src/index.ts --outdir dist --target node --minify --sourcemap --format cjs --outfile dist/index.cjs && tsc --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist .turbo"
  },
  "dependencies": {
    "@sylphx/zen": "workspace:*",
    "@sylphx/zen-router": "workspace:*"
  },
  "peerDependencies": {
    "preact": "^10.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "preact": "^10.22.1",
    "typescript": "^5.4.5",
    "@preact/preset-vite": "^2.8.2",
    "@testing-library/preact": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}

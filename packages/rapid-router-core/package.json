	"repository": {
		"type": "git",
		"url": "git+https://github.com/SylphxAI/rapid.git",
		"directory": "packages/rapid-router-core"
	},
	"homepage": "https://github.com/SylphxAI/rapid/tree/main/packages/rapid-router-core#readme",
	"bugs": {
		"url": "https://github.com/SylphxAI/rapid/issues"
	},
	"dependencies": {
		"@rapid/signal-core": "workspace:*",
		"@rapid/signal-extensions": "workspace:*"
	},
	"devDependencies": {

{
  "name": "@sylphx/zen-draft",
  "version": "0.0.0",
  "description": "Immer-like produce function with patch generation for zen",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --minify --sourcemap && bun build src/index.ts --outdir dist --target node --minify --sourcemap --format cjs --outfile dist/index.cjs && tsc --emitDeclarationOnly --outDir dist",
    "dev": "bun build src/index.ts --outdir dist --target node --sourcemap --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@sylphx/zen": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "immer": "^10.1.1",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": ["zen", "state management", "immer", "produce", "draft", "patch", "immutable"],
  "author": "Sylph",
  "license": "MIT"
}
